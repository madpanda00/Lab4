{# templates/security/login.html.twig #} {% extends 'base.html.twig' %} {% block
title %}Log in!{% endblock %} {% block stylesheets %}
<link rel="stylesheet" href="asset/css/login.css" /> {% endblock %} {% block body %}
<div class="container">
  <form action="" class="form-signin" method="post">
    <h1><a href="{{ path('list') }}" style="text-decoration: none;">SpecT</a></h1>
    {% if error %}
    <div class="alert alert-danger" role="danger">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}
    <div class="input-group flex-nowrap">
      <span class="input-group-text" id="addon-wrapping"><i class="bi bi-person"></i></span>
      <input id="inputEmail" type="email" class="form-control" name="email" value="{{ last_username }}"
        placeholder="Email" required autofocus />
    </div>
    <div class="input-group flex-nowrap">
      <span class="input-group-text" id="addon-wrapping"><i class="bi bi-key"></i></span>
      <input id="inputPassword" type="password" class="form-control" name="password" placeholder="Password" required />
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
    <button class="btn btn-sm align-middle btn-outline-secondary" type="submit" style="margin-top: 10px;">Войти</button>
    <p class="or"> У вас нет аккаунта?<a href="{{ path('registration') }}">Регистрация</a></p>
  </form>
</div>
{% endblock %}